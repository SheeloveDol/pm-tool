<% if @project.errors.any? %>

  <ul>
    <% @project.errors.full_messages.each do |msg| %>
      <li> <%= msg %> </li>
    <% end %>
  </ul>
  <% end %>

<%= form_with model: @project, local: true do |f| %>
  <div>
    <%= f.label :title %> <br>
    <%= f.text_field :title %>
  </div><br>
  <div>
    <%= f.label :description %> <br>
    <%= f.text_area :description, size: "50x10" %>
  </div><br>
  <div>
    <%= f.label :due_date %> <br>
    <%= f.text_field :due_date %>
  </div><br>
  <%= f.submit %>
<% end %>